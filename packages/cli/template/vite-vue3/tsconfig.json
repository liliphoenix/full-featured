{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "types/*": ["src/types/*"],
      "com/*": ["src/components/*"],
      "utils/*": ["src/utils/*"],
      "router/*": ["src/router/*"],
      "view/*": ["src/view/*"],
      "api/*": ["src/api/*"],
      "store/*": ["src/store/*"],
      "i18n/*": ["src/i18n/*"]
    },
    "types": ["vite/client"]
  },
  "include": [
    "./*.ts",
    "./*.config.js",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/components.d.ts",
    "babel.config.cjs"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
